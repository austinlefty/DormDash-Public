<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/dm_sans"
        android:text="@string/root_homepage"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:flow_horizontalBias="0.5"/>

    <android.widget.Button
        android:id="@+id/root_homepage_signout_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button"
        android:text="@string/root_homepage_sign_out_text"
        android:textColor="@color/white"
        android:fontFamily="@font/dm_sans_medium"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="176dp"
        android:layout_height="193dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="61dp"
        android:src="@drawable/ncc_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/select_Customer_HomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/dm_sans"
        android:text="@string/select_customer_text"
        app:layout_constraintStart_toStartOf="@+id/placeholder"
        app:layout_constraintTop_toBottomOf="@+id/placeholder" />

    <android.widget.Button
        android:id="@+id/driver_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/dm_sans"
        android:text="@string/select_deliver_button"
        android:textColor="#212121"
        app:layout_constraintEnd_toEndOf="@+id/placeholder"
        app:layout_constraintTop_toBottomOf="@+id/placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>